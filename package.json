{
	"name": "luarequire",
	"displayName": "LuaRequire",
	"description": "",
	"version": "1.4.0",
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"icon": "res/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/lin3348/luarequire_plugin.git"
	},
	"publisher": "linzzzer",
	"activationEvents": [
		"onCommand:luarequire.collating"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "luarequire.collating",
				"title": "LuaRequire Collating"
			}
		],
		"keybindings": [
			{
				"command": "luarequire.collating",
				"key": "alt+a"
			}
		],
		"languages": [
			{
				"id": "lua",
				"extensions": [
					".lua"
				]
			}
		],
		"configuration": [
			{
				"title": "luarequire",
				"properties": {
					"luarequire.searchPath": {
						"type": "array",
						"default": [
							"Logic",
							"Framework",
							"HFModule",
							"Settings",
							"ToLua"
						],
						"description": "if you config your lua search path, replace this array, 'require' will correct path for you"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.62.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"ts-loader": "^9.2.5",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.8.0",
		"@vscode/test-electron": "^1.6.2"
	}
}
